@model Model.EF.User

@{
    ViewBag.Title = "Thêm Thành Viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Thành Viên
}
@section panelTitle{
    Thêm Mới
}

<div class="x_content">
    <br />
    <div id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
        @using (Html.BeginForm("Create", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control col-md-7 col-xs-12", @autofocus = "autofocus", @id = "inputSuccess2" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control col-md-7 col-xs-12" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GroupID, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <p>

                        @Html.TextBoxFor(model => model.GroupID, new { @class = "col-md-7 col-xs-12 flat", @type = "radio", Value = "Admin", @checked = "" }) Admin <br />
                        @Html.TextBoxFor(model => model.GroupID, new { @class = "col-md-7 col-xs-12 flat", @type = "radio", Value = "Quản Trị Viên" }) Quản Trị Viên <br />
                        @Html.TextBoxFor(model => model.GroupID, new { @class = "col-md-7 col-xs-12 flat", @type = "radio", Value = "Thành Viên" })Thành Viên <br />
                        @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
                    </p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-7 col-xs-12" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control col-md-7 col-xs-12" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control col-md-7 col-xs-12" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control col-md-7 col-xs-12" })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreatedDate, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12 calendar-exibit">
                    <fieldset>
                        <div class="controls">
                            <div class="xdisplay_inputx form-group has-feedback">
                                @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control has-feedback-left col-md-7 col-xs-12", @id = "single_cal3", @ariadescribedby = "inputSuccess2Status3", @placeholder = "First Name" })
                                <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true" style="left: 0px"></span>
                                <span id="inputSuccess2Status3" class="sr-only">(success)</span>
                                @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <div class="">
                        <label>
                            @Html.CheckBoxFor(model => model.Status, new { @type = "checkbox", @class = "js-switch", @checked = "checked" }) Hoạt Động
                        </label>
                    </div>
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <input type="submit" value="Thêm" class="btn btn-success" />
                    <button class="btn btn-primary" type="reset">Làm Mới</button>
                    <button class="btn btn-danger" type="button">Quay Lại</button>
                </div>
            </div>
        }
    </div>
</div>


